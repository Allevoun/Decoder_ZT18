            <Button x:Name="BTN_q2" Click="BTN_q2_Click" Content="#2" FontSize="18" Margin="5 10 5 0"></Button>
            <Button x:Name="BTN_q3" Click="BTN_q3_Click" Content="#3" FontSize="18" Margin="5 10 5 0"></Button>-->

        <TextBox Text="What am I?"  x:Name="TB_1" Grid.Row="0" Margin="20,21,20,22" TextAlignment="Center" Background="LightSlateGray" FontFamily="MV Boli" FontSize="25">
            
            <TextBox.Effect>
                <DropShadowEffect Color="#FF578CA3" BlurRadius="13" Direction="215" ShadowDepth="8"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Text="What am I?"   x:Name="TB_2" Grid.Row="1" Margin="20,21,20,21.8" TextAlignment="Center" Background="LightSlateGray" FontFamily="MV Boli" FontSize="25">
            <TextBox.Effect>
                <DropShadowEffect Color="#FF578CA3" BlurRadius="13" Direction="215" ShadowDepth="8"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Text="What am I?"  x:Name="TB_3" Grid.Row="2" Margin="20,21.2,20,20.6"  TextAlignment="Center" Background="LightSlateGray" FontFamily="MV Boli" FontSize="25">
            <TextBox.Effect>
                <DropShadowEffect Color="#FF578CA3" BlurRadius="13" Direction="215" ShadowDepth="8"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Text="What am I?"  x:Name="TB_4" Grid.Row="3" Margin="20,21.4" TextAlignment="Center" Background="LightSlateGray" FontFamily="MV Boli" FontSize="25">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="13" Direction="215" ShadowDepth="8" Color="#FF578CA3"/>
            </TextBox.Effect>
        </TextBox>

        <Button FontSize="15" FontFamily="MV Boli" Grid.Row="0" Grid.Column="1" Margin="40,34,40.4,34" Content="Check" x:Name="BTN_Check1" Click="BTN_Check1_Click" Background="LightSeaGreen">
            <Button.Effect>
                <DropShadowEffect Color="#FF5DC7CA" Direction="300" ShadowDepth="7" BlurRadius="12"/>
            </Button.Effect>
        </Button>
        <Button FontSize="15" FontFamily="MV Boli" Grid.Row="1" Grid.Column="1" Margin="40,34,40.4,33.8" Content="Check" x:Name="BTN_Check2" Click="BTN_Check2_Click" Background="LightSeaGreen">
            <Button.Effect>
                <DropShadowEffect Color="#FF5DC7CA" Direction="300" ShadowDepth="7" BlurRadius="12"/>
            </Button.Effect>
        </Button>
        <Button FontSize="15" FontFamily="MV Boli" Grid.Row="2" Grid.Column="1" Margin="40,33.2,40.4,33.6" Content="Check" x:Name="BTN_Check3" Click="BTN_Check3_Click" Background="LightSeaGreen">
            <Button.Effect>
                <DropShadowEffect Color="#FF5DC7CA" Direction="300" ShadowDepth="7" BlurRadius="12"/>
            </Button.Effect>
        </Button>
        <Button FontSize="15" FontFamily="MV Boli" Grid.Row="3" Grid.Column="1" Margin="40,34.4,40.4,34.4" Content="Check" x:Name="BTN_Check4" Click="BTN_Check4_Click" Background="LightSeaGreen">
            <Button.Effect>
                <DropShadowEffect Color="#FF5DC7CA" Direction="300" ShadowDepth="7" BlurRadius="12"/>
            </Button.Effect>
        </Button>

