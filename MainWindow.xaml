<Window x:Class="Decoder_ZT18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decoder_ZT18"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525" ResizeMode="NoResize" >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.01"/>
            <GradientStop Color="#FF1C1928" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="Grid_Main1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" ></ColumnDefinition>
            <ColumnDefinition Width="17*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--<Frame Grid.Column="0" Grid.ColumnSpan="2" x:Name="Frame_Loader"></Frame>
        <Frame Grid.Column="1" x:Name="Frame_QuestOnePage"></Frame>-->
